{
    "name": "Cordova-react-redux-boilerplate",
    "version": "0.0.1",
    "author": "Farzad YZ",
    "description": "A boilerplate including react, redux, react-router, webpack, cordova",
    "scripts": {
        "server": "export NODE_ENV=development && webpack-dev-server --config webpack.config.js --inline --content-base www/ --port 3001",
        "build:webpack": "export NODE_ENV=production && webpack --config webpack.config.js -p",
        "build:cordova": "cordova build ios",
        "build:all": "export NODE_ENV=production && webpack --config webpack.config.js -p && cordova build ios",
        "run:cordova": "cordova run ios",
        "build:cordova:release": "cordova build android --release"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/farskid/cordova-react-redux-boilerplate"
    },
    "license": "MIT",
    "dependencies": {
        "cordova-ios": "^4.5.1",
        "cordova-plugin-device": "^1.1.6",
        "cordova-plugin-splashscreen": "^4.0.3",
        "cordova-plugin-whitelist": "^1.3.2",
        "jquery": "^3.2.1",
        "jquery-colorbox": "^1.6.4",
        "react": "^15.6.1",
        "react-dom": "^15.6.1",
        "react-redux": "^5.0.6",
        "react-router-dom": "^4.2.2",
        "react-router-redux": "^4.0.7",
        "react-scripts": "1.0.13",
        "redux": "^3.7.2",
        "redux-api-middleware": "^1.0.2",
        "redux-devtools-extension": "^2.13.2",
        "redux-logger": "^2.7.4",
        "redux-thunk": "^2.2.0",
        "semantic-ui-react": "^0.73.1",
        "webpack": "^1.13.3"
    },
    "devDependencies": {
        "autoprefixer": "^6.5.3",
        "babel-cli": "^6.11.4",
        "babel-core": "^6.18.2",
        "babel-loader": "^6.2.8",
        "babel-polyfill": "^6.3.14",
        "babel-preset-es2015": "^6.3.13",
        "babel-preset-react": "^6.3.13",
        "babel-preset-react-hmre": "^1.1.1",
        "babel-preset-stage-0": "^6.5.0",
        "css-loader": "^0.26.0",
        "extract-text-webpack-plugin": "^1.0.1",
        "file-loader": "^0.9.0",
        "imports-loader": "^0.6.5",
        "multiparty": "^4.1.2",
        "node-sass": "^3.13.0",
        "onsenui": "^2.6.1",
        "postcss": "^5.2.6",
        "postcss-loader": "^1.1.1",
        "raw-loader": "^0.5.1",
        "react-onsenui": "^1.6.1",
        "sass-loader": "^4.0.2",
        "style-loader": "^0.13.1",
        "url-loader": "^0.5.7",
        "webpack": "^1.13.1",
        "webpack-dev-middleware": "^1.2.0",
        "webpack-dev-server": "^1.16.2"
    },
    "cordova": {
        "plugins": {
            "cordova-plugin-splashscreen": {},
            "cordova-plugin-whitelist": {},
            "cordova-plugin-device": {}
        },
        "platforms": [
            "ios"
        ]
    }
}